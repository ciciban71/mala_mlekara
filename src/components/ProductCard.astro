---
import PlaceholderImage from './PlaceholderImage.astro';

interface Props {
  title: string;
  description: string;
  varieties?: string;
  placeholderLabel: string;
}

const { title, description, varieties, placeholderLabel } = Astro.props;
---

<article class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2 overflow-hidden">
  <PlaceholderImage
    type="image"
    label={placeholderLabel}
    aspectRatio="1/1"
    class="w-full"
  />
  <div class="p-6 space-y-3">
    <h3 class="text-2xl font-serif font-semibold text-deepBlue group-hover:text-primaryBlue transition-colors duration-300">
      {title}
    </h3>
    {varieties && (
      <p class="text-sm text-primaryBlue font-medium">
        {varieties}
      </p>
    )}
    <p class="text-deepBlue/80 leading-relaxed">
      {description}
    </p>
  </div>
</article>
