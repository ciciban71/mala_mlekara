---
import PlaceholderImage from './PlaceholderImage.astro';
---

<section id="kontakt" class="py-16 md:py-24 bg-gradient-to-b from-lightIce/30 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Heading -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-deepBlue mb-4">
        Kontaktirajte nas
      </h2>
      <p class="text-xl md:text-2xl text-deepBlue/80">
        Gde nas možete naći
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 mb-12">
      <!-- Left Column - Contact Information -->
      <div class="space-y-8">
        <div class="bg-white p-8 rounded-xl shadow-md space-y-6">
          <!-- Address -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-lightIce rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primaryBlue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg text-deepBlue mb-1">Adresa</h3>
              <p class="text-deepBlue/80">
                Selo Janić bb<br />
                34310 Topola, Srbija
              </p>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-lightIce rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primaryBlue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg text-deepBlue mb-1">Telefon</h3>
              <p class="text-deepBlue/80">
                +381 34 XXX XXXX<br />
                <span class="text-sm text-deepBlue/60">(Pozovite između 07:00 - 19:00)</span>
              </p>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-lightIce rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primaryBlue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg text-deepBlue mb-1">Email</h3>
              <p class="text-deepBlue/80">kontakt@malamlekara.rs</p>
            </div>
          </div>

          <!-- Working Hours -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-lightIce rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primaryBlue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg text-deepBlue mb-1">Radno vreme</h3>
              <p class="text-deepBlue/80">
                Ponedeljak - Subota: 07:00 - 19:00<br />
                Nedelja: Po dogovoru
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Map Placeholder -->
      <div>
        <PlaceholderImage
          type="image"
          label="Mapa lokacije - Selo Janić, Topola"
          aspectRatio="4/3"
          class="w-full h-full"
        />
        <!-- Comment for future Google Maps embed -->
        <!--
        Za Google Maps embed, zamenite PlaceholderImage sa:
        <iframe
          src="https://www.google.com/maps/embed?pb=..."
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="rounded-xl shadow-md">
        </iframe>
        -->
      </div>
    </div>

    <!-- Optional Contact Form -->
    <div class="max-w-3xl mx-auto bg-white p-8 md:p-10 rounded-xl shadow-md">
      <h3 class="text-2xl md:text-3xl font-serif font-semibold text-deepBlue mb-6 text-center">
        Imate pitanje? Pošaljite nam poruku
      </h3>

      <form class="space-y-6" action="#" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Name Field -->
          <div>
            <label for="ime" class="block text-sm font-medium text-deepBlue mb-2">
              Vaše ime <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="ime"
              name="ime"
              required
              class="w-full px-4 py-3 border-2 border-primaryBlue/30 rounded-lg focus:outline-none focus:border-primaryBlue transition-colors duration-300"
              placeholder="Unesite vaše ime"
            />
          </div>

          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-medium text-deepBlue mb-2">
              Email adresa <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border-2 border-primaryBlue/30 rounded-lg focus:outline-none focus:border-primaryBlue transition-colors duration-300"
              placeholder="vasa@email.com"
            />
          </div>
        </div>

        <!-- Phone Field (Optional) -->
        <div>
          <label for="telefon" class="block text-sm font-medium text-deepBlue mb-2">
            Telefon
          </label>
          <input
            type="tel"
            id="telefon"
            name="telefon"
            class="w-full px-4 py-3 border-2 border-primaryBlue/30 rounded-lg focus:outline-none focus:border-primaryBlue transition-colors duration-300"
            placeholder="+381 XX XXX XXXX"
          />
        </div>

        <!-- Message Field -->
        <div>
          <label for="poruka" class="block text-sm font-medium text-deepBlue mb-2">
            Vaša poruka <span class="text-red-500">*</span>
          </label>
          <textarea
            id="poruka"
            name="poruka"
            required
            rows="5"
            class="w-full px-4 py-3 border-2 border-primaryBlue/30 rounded-lg focus:outline-none focus:border-primaryBlue transition-colors duration-300 resize-none"
            placeholder="Napišite vašu poruku..."
          ></textarea>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button
            type="submit"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-primaryBlue hover:bg-primaryBlue/90 rounded-lg transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            Pošalji poruku
          </button>
        </div>

        <p class="text-sm text-center text-deepBlue/60 italic mt-4">
          * Obavezna polja
        </p>
      </form>
    </div>
  </div>
</section>
