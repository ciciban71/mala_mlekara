---
// Header component with sticky navigation and mobile menu
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-primaryBlue/20 transition-shadow duration-300" id="header">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8" aria-label="Glavna navigacija">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo / Farm Name -->
      <a href="#pocetna" class="text-2xl md:text-3xl font-serif font-bold text-deepBlue hover:text-primaryBlue transition-colors duration-300">
        Mala Mlekara Janić
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-8">
        <li><a href="#pocetna" class="nav-link">Početna</a></li>
        <li><a href="#o-nama" class="nav-link">O nama</a></li>
        <li><a href="#proizvodi" class="nav-link">Proizvodi</a></li>
        <li><a href="#galerija" class="nav-link">Galerija</a></li>
        <li><a href="#kontakt" class="nav-link">Kontakt</a></li>
      </ul>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-primaryBlue/10 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primaryBlue"
        aria-label="Otvori meni"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6 text-deepBlue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          <path id="menu-icon-close" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4" aria-label="Mobilni meni">
      <ul class="flex flex-col space-y-2">
        <li><a href="#pocetna" class="mobile-nav-link">Početna</a></li>
        <li><a href="#o-nama" class="mobile-nav-link">O nama</a></li>
        <li><a href="#proizvodi" class="mobile-nav-link">Proizvodi</a></li>
        <li><a href="#galerija" class="mobile-nav-link">Galerija</a></li>
        <li><a href="#kontakt" class="mobile-nav-link">Kontakt</a></li>
      </ul>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-base font-medium text-deepBlue hover:text-primaryBlue transition-colors duration-300 relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: theme('colors.primaryBlue');
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .mobile-nav-link {
    @apply block px-4 py-3 text-base font-medium text-deepBlue hover:bg-primaryBlue/10 hover:text-primaryBlue rounded-lg transition-all duration-300;
  }

  /* Add shadow on scroll */
  .scrolled {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');

  mobileMenuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('hidden');

    if (isOpen) {
      mobileMenu?.classList.remove('hidden');
      menuIconOpen?.classList.add('hidden');
      menuIconClose?.classList.remove('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'true');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIconOpen?.classList.remove('hidden');
      menuIconClose?.classList.add('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
    }
  });

  // Close mobile menu when clicking a link
  const mobileLinks = document.querySelectorAll('.mobile-nav-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIconOpen?.classList.remove('hidden');
      menuIconClose?.classList.add('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
    });
  });

  // Add shadow on scroll
  const header = document.getElementById('header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });
</script>
